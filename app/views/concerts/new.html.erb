<h1>Add a new concert</h1>

<% if @my_concert.errors.any? %>
	<% if flash[:error] %>
		<% flash[:error] %>
	<% end %>
	<ul>
		<% @my_concert.errors.full_messages.each do |error_msg| %>
			<li><%=error_msg %></li>
		<% end %>
	</ul>
<% end %>

<%=  form_for @my_concert do |f| %>
	<%= f.label :artist %>
	<%=f.text_field :artist %>
	<br><br>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
	<br><br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br><br>
	<%= f.label :date %>
	<%= f.datetime_local_field :date %>
	<br><br>
	<%= f.label :price %>
	<%= f.number_field :price %>
	<br><br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.button %>
<% end %>