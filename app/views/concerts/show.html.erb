<%= render "shared/header" %>

<h1>Concert Details</h1>

<h2><%= @my_concert.artist %></h2>
<p><%= @my_concert.venue %></p>
<p><%= @my_concert.city %></p>
<p><%= @my_concert.date %></p>
<p><%= @my_concert.price %></p>

<h3>Comments</h3>

<ul>
	<% @comments.each do |comment| %>
		<li>
			<%= comment.name %>
			<%= comment.comment %>
		</li>
	<% end %>
</ul>

<h4>Leave your comment!</h4>

<%= form_for [@my_concert, @my_comment] do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :comment %>
		<%= f.text_area :comment %>

		<%= f.submit "Save" %>
<% end %>

<%= render "shared/footer" %>